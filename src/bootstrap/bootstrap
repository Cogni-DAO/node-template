#!/usr/bin/env bash
# SPDX-License-Identifier: PolyForm-Shield-1.0.0
# SPDX-FileCopyrightText: 2025 Cogni DAO

set -euo pipefail

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

log_info() {
    echo -e "${GREEN}[INFO]${NC} $1"
}

log_warn() {
    echo -e "${YELLOW}[WARN]${NC} $1"
}

log_error() {
    echo -e "${RED}[ERROR]${NC} $1"
}

check_command() {
    if command -v "$1" >/dev/null 2>&1; then
        log_info "$1 is already installed"
        return 0
    else
        return 1
    fi
}

install_brew_package() {
    local package=$1
    if ! check_command "$package"; then
        log_info "Installing $package via Homebrew..."
        brew install "$package"
    fi
}

# Check if we're on macOS
if [[ "$OSTYPE" == "darwin"* ]]; then
    # Check for Homebrew
    if ! check_command brew; then
        log_info "Installing Homebrew..."
        /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
    fi
    
    # Install system dependencies
    install_brew_package node
    install_brew_package pnpm
    install_brew_package opentofu
    install_brew_package docker
    install_brew_package reuse
else
    log_warn "Non-macOS system detected. Please install manually:"
    log_warn "- Node.js (via nvm or package manager)"
    log_warn "- pnpm (npm install -g pnpm)"
    log_warn "- OpenTofu (https://opentofu.org/docs/intro/install/)"
    log_warn "- Docker (https://docs.docker.com/engine/install/)"
    log_warn "- REUSE tool (brew install reuse)"
fi

# Install Node.js dependencies
log_info "Installing Node.js dependencies..."
pnpm install

# Setup git hooks
log_info "Setting up git hooks..."
pnpm prepare

log_info "âœ… Bootstrap complete!"
log_info ""
log_info "Next steps:"
log_info "  pnpm dev     # Start development server"
log_info "  pnpm check   # Run all validation checks"
log_info ""
log_info "For deployment:"
log_info "  cd infra/terraform/spheron"
log_info "  tofu init"