{
  "$schema": "https://biomejs.dev/schemas/2.3.7/schema.json",
  "root": true,
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "includes": [
      "**/*.ts",
      "**/*.tsx",
      "**/*.js",
      "**/*.jsx",
      "**/*.mjs",
      "**/*.cjs",
      "**/*.mts",
      "**/*.cts",
      "**/*.json"
    ],
    "ignoreUnknown": false
  },
  "extends": ["./biome/base.json", "./biome/tests.json"]
}
