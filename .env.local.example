# Base Development Environment Variables
# Copy this to .env.local (never commit .env.local)

NODE_ENV=production
APP_ENV=production

# App runtime (used by Next.js server/runtime only)
APP_BASE_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000
DOMAIN=localhost

# Database connection pieces (DATABASE_URL constructed from these)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=cogni_template_dev
DB_HOST=localhost
DB_PORT=5432

# Test base URL for stack tests
TEST_BASE_URL=http://localhost:3000/

# Session and LLM configuration
SESSION_SECRET="local-dev-secret-at-least-32-characters-long-change-me"
LITELLM_BASE_URL=http://localhost:4000
LITELLM_MASTER_KEY=your-litellm-master-key-here
OPENROUTER_API_KEY=your-openrouter-api-key-here
DEFAULT_MODEL=openai/gpt-4o-mini
PORT=3000
PINO_LOG_LEVEL=debug

# Wallet integration (optional)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=get-from-walletconnect-cloud
NEXT_PUBLIC_CHAIN_ID=11155111 #Sepolia

# Development tokens (replace with your own)
CHERRY_AUTH_KEY=your-cherry-auth-key-here
CR_PAT=your-github-pat-here
GHCR_DEPLOY_TOKEN=your-ghcr-deploy-token-here