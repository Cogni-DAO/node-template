{
  "name": "cogni-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --report-unused-disable-directives --max-warnings=0 --no-error-on-unmatched-pattern",
    "lint:fix": "eslint . --fix --report-unused-disable-directives",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "test:lint": "vitest run tests/lint/**/*.spec.ts",
    "check": "pnpm typecheck && pnpm lint && pnpm format:check && pnpm test && pnpm check:docs && pnpm repo-check",
    "check:docs": "pnpm -s run check:docs:agents && pnpm -s run check:docs:headers",
    "check:docs:agents": "node scripts/validate-agents-md.mjs",
    "check:docs:headers": "tsx scripts/validate-doc-headers.ts",
    "test": "vitest run",
    "e2e": "dotenv -e .env.e2e -- playwright test --project=staging-full",
    "e2e:smoke": "dotenv -e .env.e2e -- playwright test --project=smoke",
    "e2e:prod": "pnpm e2e:smoke",
    "e2e:all": "dotenv -e .env.e2e -- playwright test --project=staging-full --project=smoke",
    "e2e:file": "dotenv -e .env.e2e -- playwright test",
    "e2e:debug": "dotenv -e .env.e2e -- env PWDEBUG=1 playwright test",
    "e2e:report": "playwright show-report e2e/artifacts/report",
    "repo-check": "repolinter lint -c repolinter.json .",
    "prepare": "husky"
  },
  "engines": {
    "node": "20.x"
  },
  "lint-staged": {
    "*.{ts,tsx,js,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,css,json}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.552.0",
    "next": "16.0.1",
    "next-themes": "^0.4.6",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.4.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.39.1",
    "@next/eslint-plugin-next": "^16.0.1",
    "@playwright/test": "^1.56.1",
    "@poupe/eslint-plugin-tailwindcss": "^0.2.4",
    "@tailwindcss/postcss": "^4.1.16",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "conventional-changelog-conventionalcommits": "7",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-boundaries": "5.1.0",
    "eslint-plugin-check-file": "^3.3.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-no-inline-styles": "^1.0.5",
    "eslint-plugin-no-literal-classnames": "^1.2.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "eslint-plugin-tsdoc": "^0.4.0",
    "eslint-plugin-unicorn": "^62.0.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "fast-glob": "^3.3.3",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "repolinter": "^0.12.0",
    "shadcn": "^3.5.0",
    "tailwindcss": "^4.1.16",
    "tsx": "^4.20.6",
    "typescript": "^5",
    "vitest": "^4.0.7"
  }
}
