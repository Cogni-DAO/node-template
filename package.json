{
  "name": "cogni-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "dotenv -e .env.local -- next dev",
    "dev:infra": "docker compose --env-file .env.local -f platform/infra/services/runtime/docker-compose.dev.yml up -d postgres litellm",
    "dev:infra:test": "docker compose --env-file .env.test -f platform/infra/services/runtime/docker-compose.dev.yml up -d postgres litellm",
    "dev:infra:down": "docker compose --env-file .env.local -f platform/infra/services/runtime/docker-compose.dev.yml down postgres litellm",
    "dev:stack": "pnpm dev:infra && pnpm dev",
    "dev:stack:test": "pnpm dev:infra:test && dotenv -e .env.test -- next dev",
    "db:generate": "dotenv -e .env.local -- drizzle-kit generate",
    "db:migrate": "dotenv -e .env.local -- drizzle-kit migrate",
    "db:migrate:test": "dotenv -e .env.test -- drizzle-kit migrate",
    "db:migrate:container": "drizzle-kit migrate",
    "db:seed": "tsx scripts/db/seed.ts",
    "db:setup": "pnpm db:migrate && pnpm db:seed",
    "docker:dev:down": "docker compose --env-file .env.local -f platform/infra/services/runtime/docker-compose.dev.yml down",
    "docker:dev:stack": "docker compose --env-file .env.local -f platform/infra/services/runtime/docker-compose.dev.yml up -d --build",
    "docker:dev:stack:fast": "docker compose --env-file .env.local -f platform/infra/services/runtime/docker-compose.dev.yml up -d",
    "docker:dev:stack:migrate": "DB_HOST=postgres docker compose --env-file .env.local -f platform/infra/services/runtime/docker-compose.dev.yml run --rm --entrypoint sh app -lc 'pnpm db:migrate:container'",
    "docker:test:stack": "docker compose --env-file .env.test -f platform/infra/services/runtime/docker-compose.dev.yml up -d --build",
    "docker:test:stack:fast": "docker compose --env-file .env.test -f platform/infra/services/runtime/docker-compose.dev.yml up -d",
    "docker:test:stack:migrate": "DB_HOST=postgres docker compose --env-file .env.test -f platform/infra/services/runtime/docker-compose.dev.yml run --rm --entrypoint sh app -lc 'pnpm db:migrate:container'",
    "docker:down": "docker compose -f platform/infra/services/runtime/docker-compose.yml down",
    "docker:stack": "docker compose --env-file .env.local -f platform/infra/services/runtime/docker-compose.yml up -d --build",
    "docker:stack:fast": "docker compose --env-file .env.local -f platform/infra/services/runtime/docker-compose.yml up -d",
    "docker:stack:migrate": "docker compose --env-file .env.local -f platform/infra/services/runtime/docker-compose.yml run --rm --entrypoint sh app -lc 'pnpm db:migrate:container'",
    "build": "next build",
    "start": "next start -p 3000 -H 0.0.0.0",
    "lint": "eslint --report-unused-disable-directives --max-warnings=0 --no-error-on-unmatched-pattern",
    "lint:fix": "eslint . --fix --report-unused-disable-directives",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "test:lint": "vitest run tests/lint/**/*.spec.ts",
    "check": "pnpm typecheck && pnpm lint && pnpm format:check && pnpm test && pnpm check:docs && pnpm repo-check",
    "check:code": "pnpm typecheck && pnpm lint && pnpm format:check && pnpm test",
    "check:ci": "pnpm check && pnpm e2e",
    "check:docs": "pnpm -s run check:docs:agents && pnpm -s run check:docs:headers",
    "check:docs:agents": "node scripts/validate-agents-md.mjs",
    "check:docs:headers": "tsx scripts/validate-doc-headers.ts",
    "test": "vitest run",
    "test:ci": "vitest run --coverage.enabled=true --coverage.reporter=lcov --coverage.reporter=json-summary --coverage.reporter=text",
    "test:int": "vitest run --config vitest.integration.config.mts",
    "//": "Stack tests",
    "test:stack:dev": "dotenv -e .env.test -- vitest run --config vitest.stack.config.mts",
    "test:stack:docker": "DB_HOST=localhost DB_PORT=55432 TEST_BASE_URL=https://localhost/ dotenv -e .env.test -- vitest run --config vitest.stack.config.mts",
    "test:stack:db:create": "dotenv -e .env.test -- bash -c 'psql -h localhost -U \"$POSTGRES_USER\" -d postgres -c \"CREATE DATABASE ${POSTGRES_DB};\" || true'",
    "test:stack:db:drop": "pnpm tsx scripts/db/drop-test-db.ts",
    "test:stack:setup": "pnpm test:stack:db:create && pnpm db:migrate:test",
    "test:stack:reset": "pnpm test:stack:db:drop || true && pnpm test:stack:setup",
    "e2e": "dotenv -e .env -- playwright test --project=staging-full",
    "e2e:smoke": "dotenv -e .env -- playwright test --project=smoke",
    "e2e:prod": "pnpm e2e:smoke",
    "e2e:all": "dotenv -e .env -- playwright test --project=staging-full --project=smoke",
    "e2e:file": "dotenv -e .env -- playwright test",
    "e2e:debug": "dotenv -e .env -- env PWDEBUG=1 playwright test",
    "e2e:report": "playwright show-report e2e/artifacts/report",
    "repo-check": "repolinter lint -c repolinter.json .",
    "prepare": "husky"
  },
  "engines": {
    "node": "20.x"
  },
  "lint-staged": {
    "*.{ts,tsx,js,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,css,json}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@ts-rest/core": "^3.52.1",
    "@ts-rest/open-api": "^3.52.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.7",
    "lucide-react": "^0.552.0",
    "motion": "^12.23.24",
    "next": "16.0.1",
    "next-themes": "^0.4.6",
    "postgres": "^3.4.5",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.4.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.39.1",
    "@next/eslint-plugin-next": "^16.0.1",
    "@playwright/test": "^1.56.1",
    "@poupe/eslint-plugin-tailwindcss": "^0.2.4",
    "@tailwindcss/postcss": "^4.1.16",
    "@testcontainers/postgresql": "^11.8.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitest/coverage-v8": "^4.0.9",
    "conventional-changelog-conventionalcommits": "7",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "dotenv-expand": "^12.0.3",
    "drizzle-kit": "^0.31.7",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-boundaries": "5.1.0",
    "eslint-plugin-check-file": "^3.3.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-no-inline-styles": "^1.0.5",
    "eslint-plugin-no-literal-classnames": "^1.2.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "eslint-plugin-tsdoc": "^0.4.0",
    "eslint-plugin-unicorn": "^62.0.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "fast-glob": "^3.3.3",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "repolinter": "^0.12.0",
    "shadcn": "^3.5.0",
    "tailwindcss": "^4.1.16",
    "tsx": "^4.20.6",
    "typescript": "^5",
    "undici": "^7.16.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.7"
  }
}
