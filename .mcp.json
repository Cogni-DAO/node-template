{
  "mcpServers": {
    "shadcn": {
      "command": "npx",
      "args": ["shadcn@latest", "mcp"]
    },
    "grafana": {
      "command": "pnpm",
      "args": [
        "dotenv",
        "-e",
        ".env.local",
        "--",
        "docker",
        "run",
        "--rm",
        "-i",
        "-e",
        "GRAFANA_URL",
        "-e",
        "GRAFANA_SERVICE_ACCOUNT_TOKEN",
        "mcp/grafana",
        "-t",
        "stdio"
      ]
    },
    "grafana-local": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "--network",
        "web",
        "-e",
        "GRAFANA_URL=http://grafana:3000",
        "mcp/grafana",
        "-t",
        "stdio"
      ]
    }
  }
}
