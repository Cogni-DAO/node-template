{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "scripts/**/*.ts"
  ],
  "exclude": [
    "packages/**",
    "**/dist/**",
    ".next/**",
    "node_modules/**",
    "coverage/**",
    "**/__arch_probes__/**"
  ]
}
